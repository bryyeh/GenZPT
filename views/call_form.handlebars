<div class="container">
  <form action="/call" method="POST">

    <h3 class="mt-4 mb-4">Who to Call</h3>
    <hr>

    <div class="form-group">
      <label for="toPhoneNumber">Phone number</label>
      <input type="tel" id="toPhoneNumber" name="toPhoneNumber" placeholder="555 555 5555" value="{{defaultToPhoneNumber}}" class="form-control" required>
    </div>    

    
    <br>    

    <h3 class="mt-4 mb-4">Order Details</h3>
    <hr>

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" id="name" name="name" placeholder="John Smith" value="John Smith" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="fromPhoneNumber">Phone number</label>
      <input type="tel" id="fromPhoneNumber" name="fromPhoneNumber" placeholder="555 555 5555" value="{{defaultFromPhoneNumber}}" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="deliveryAddress">Delivery Address</label>
      <input type="text" id="deliveryAddress" name="deliveryAddress" placeholder="123 Main Street, Sunnyvale" value="123 Main Street, Sunnyvale" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="pizzaSize">Pizza Size</label>
      <input type="text" id="pizzaSize" name="pizzaSize" placeholder="Medium" value="Medium" class="form-control" required>
    </div>

    <div class="form-group">
      <label for="toppings">Toppings</label>
      <input type="text" id="toppings" name="toppings" placeholder="Pepperoni" value="Pepperoni" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>