<div class="container">
  <form>
    <div class="form-group">
      <label for="phone">Phone number:</label>
      <input type="tel" id="phone" name="phone" value="555 555 5555" class="form-control" required>
    </div>
    
    <div class="form-group">
      <label for="purpose">Call purpose:</label>
      <textarea id="purpose" name="purpose" class="form-control" required rows="5" placeholder="Enter your call purpose here"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>